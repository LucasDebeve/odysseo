{% extends 'navbase.html.twig' %}

{% block title %}Odysseo - Profile{% endblock %}

{% block content %}       
<div class="max-w-7xl mx-auto space-y-6">
            
            <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
                
                <div class="md:col-span-3 glass-card p-2 flex flex-col overflow-hidden group">
                    <div class="relative flex-1 rounded-[2rem] overflow-hidden">
                        <img src="{{ asset('/uploads/avatar/' ~ user.avatarPath|default('default.jpg')) }}" alt="Avatar" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700">
                        <div class="absolute bottom-4 left-4">
                            <span class="bg-success text-white text-xs font-black px-3 py-1 rounded-full uppercase tracking-tighter">En poste</span>
                        </div>
                    </div>
                </div>

                <div class="md:col-span-9 bg-white rounded-[2.5rem] p-10 shadow-sm border border-gray-100 flex flex-col justify-between">
                    <div>
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <h1 class="text-4xl font-black tracking-tighter text-primary italic">{{ user.prenom }} {{ user.nom }}<span class="text-golden">.</span></h1>
                                <p class="text-gray-400 font-bold uppercase text-xs tracking-widest mt-1">Animateur Vie Quotidienne • {{ user.age }} ans</p>
                            </div>
                            <div class="flex gap-2">
                                {% for diplome in user.diplomes %}
                                    <span class="px-4 py-2  {{ diplome.isEquivalentBafa ? 'bg-primary-50 text-primary' : 'bg-golden-soft text-golden' }} rounded-xl text-xs font-black italic">{{ diplome.nom }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        <p class="text-gray-500 leading-relaxed max-w-2xl">
                            {{ user.description }}
                        </p>
                    </div>
                    
                    <div class="flex gap-10 mt-8 pt-8 border-t border-gray-50">
                        <div>
                            <span class="block text-xs font-black uppercase text-gray-400 tracking-tighter">Séjours effectués</span>
                            <span class="text-2xl font-black italic">12</span>
                        </div>
                        <div>
                            <span class="block text-xs font-black uppercase text-gray-400 tracking-tighter">Spécialité</span>
                            <span class="text-2xl font-black italic text-golden uppercase">Astronomie</span>
                        </div>
                        <div>
                            <span class="block text-xs font-black uppercase text-gray-400 tracking-tighter">Niveau Études</span>
                            <span class="text-2xl font-black italic">Master 1</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
                
                <div class="md:col-span-4 bg-[#1A2B56] p-8 rounded-[2.5rem] text-white overflow-hidden relative">
                    <h3 class="font-black text-xs uppercase tracking-widest text-white/40 mb-8 italic">Compétences clés</h3>
                    <div class="grid grid-cols-4 gap-4">
                        {% for i in 1..8 %}
                        <div class="group cursor-pointer">
                            <div class="w-14 h-14 rounded-2xl bg-white/10 flex items-center justify-center transition-all group-hover:bg-golden group-hover:scale-110">
                                <svg class="w-6 h-6 text-white group-hover:text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="mt-10">
                        <button class="text-xs font-black uppercase text-golden border-b-2 border-golden/30 pb-1 hover:border-golden transition-all tracking-tighter">Voir le détail des acquis</button>
                    </div>
                </div>

                <div class="md:col-span-8 bg-white rounded-[2.5rem] p-10 shadow-sm border border-gray-100 relative overflow-hidden">
                    <div class="flex justify-between items-center mb-10">
                        <div>
                            <h3 class="text-xl font-bold italic">Historique d'activité</h3>
                            <p class="text-xs text-gray-400 font-bold uppercase tracking-widest mt-1">Nombre d'heures par jour sur l'année</p>
                        </div>
                        <div class="flex gap-2">
                             <span class="w-3 h-3 rounded-sm bg-gray-100"></span>
                             <span class="w-3 h-3 rounded-sm bg-primary-200"></span>
                             <span class="w-3 h-3 rounded-sm bg-primary-400"></span>
                             <span class="w-3 h-3 rounded-sm bg-primary"></span>
                        </div>
                    </div>
                    
                    <div class="w-full h-32 bg-[#F8F9FA] rounded-2xl flex items-center justify-center border-2 border-dashed border-gray-200">
                        <span class="text-gray-300 font-black italic uppercase tracking-tighter">Chart : Cal-Heatmap Engine</span>
                    </div>

                    <div class="mt-8 flex justify-between text-xs font-black text-gray-400 uppercase tracking-widest italic">
                        <span>Janvier</span>
                        <span>Avril</span>
                        <span>Juillet</span>
                        <span>Octobre</span>
                        <span>Décembre</span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 italic">
                <div class="bg-golden p-10 rounded-[2.5rem] flex items-center justify-between group cursor-pointer hover:scale-[1.01] transition-all">
                    <div>
                        <span class="text-xs font-black uppercase text-primary/60 tracking-tighter">Dernière formation</span>
                        <h4 class="text-2xl font-black text-primary italic">Gestion de conflits complexes</h4>
                    </div>
                    <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-golden group-hover:translate-x-2 transition-transform">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                    </div>
                </div>

                <a href="{{ path('app_edit_profile', {id: user.id}) }}" class="bg-white border-2 border-primary p-10 rounded-[2.5rem] flex items-center justify-between group cursor-pointer hover:bg-primary hover:text-white transition-all">
                    <div>
                        <span class="text-xs font-black uppercase text-gray-400 tracking-tighter">Des modifications ?</span>
                        <h4 class="text-2xl font-black italic">Éditer le profil</h4>
                    </div>
                    <div class="w-12 h-12 border-2 border-primary rounded-full flex items-center justify-center group-hover:border-white transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="3" d="M12 4v16m8-8H4"/></svg>
                    </div>
                </a>
            </div>

        </div>
{% endblock %}