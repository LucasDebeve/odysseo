{% extends 'navbase.html.twig' %}

{% block title %}Odysseo - Modifier mon profil{% endblock %}

{% block content %}       
<div class="max-w-7xl mx-auto">
    {{ form_start(form, {attr: {class: 'space-y-6'}}) }}
        <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
            <div class="md:col-span-3 glass-card p-2 flex flex-col overflow-hidden group relative cursor-pointer">
                <div class="relative flex-1 rounded-[2rem] overflow-hidden">
                    <img src="{{ asset('/uploads/avatar/' ~ user.avatarPath|default('default.jpg')) }}" alt="Avatar" class="w-full h-full object-cover transition-all duration-700">
                    <div class="absolute inset-0 bg-primary/40 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col items-center justify-center text-white">
                        <svg class="w-8 h-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/><path stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                        <span class="text-xs font-black uppercase tracking-tighter">Modifier la photo</span>
                    </div>
                    {{ form_widget(form.avatar, {attr: {class: 'absolute inset-0 opacity-0 cursor-pointer'}}) }}
                </div>
            </div>

            <div class="md:col-span-9 bg-white rounded-[2.5rem] p-10 shadow-sm border border-gray-100 flex flex-col justify-between">
                <div>
                    <div class="flex justify-between items-start mb-6">
                        <div class="flex-1 mr-4">
                            <div class="flex gap-2 mb-1">
                                {{ form_widget(form.prenom, {attr: {class: 'text-4xl font-black tracking-tighter text-primary italic bg-gray-50 rounded-lg px-2 w-1/3 focus:outline-none focus:ring-2 focus:ring-golden'}}) }}
                                {{ form_widget(form.nom, {attr: {class: 'text-4xl font-black tracking-tighter text-primary italic bg-gray-50 rounded-lg px-2 w-1/3 focus:outline-none focus:ring-2 focus:ring-golden'}}) }}
                            </div>

                            <div class="flex items-center gap-2 mb-3">                              
                                {{ form_widget(form.poste, {attr: {class: 'bg-transparent border-b border-gray-200 focus:border-primary outline-none py-1'}}) }}
                                <span>•</span>
                                {{ form_widget(form.dateNais, {attr: {class: 'bg-transparent border-b border-gray-200 focus:border-primary outline-none py-1'}}) }}
                            </div>
                        </div>
                    </div>
                    {{ form_widget(form.description, {attr: {class: 'w-full text-gray-500 leading-relaxed bg-gray-50 rounded-2xl p-4 focus:outline-none focus:ring-2 focus:ring-primary/10 border-none resize-none'}}) }}
                </div>
                
                <div class="flex gap-10 mt-4 pt-4 border-t border-gray-50">
                    <div>
                        <label class="block text-xs font-black uppercase text-gray-400 tracking-tighter">Spécialité</label>
                        {{ form_widget(form.specialite, {attr: {class: 'text-xl font-black italic text-golden uppercase bg-transparent outline-none appearance-none cursor-pointer'}}) }}
                    </div>
                    <div>
                        <label class="block text-xs font-black uppercase text-gray-400 tracking-tighter">Niveau Études</label>
                        {{ form_widget(form.etudes, {attr: {class: 'text-xl font-black italic bg-transparent border-b border-transparent focus:border-gray-200 outline-none w-32'}}) }}
                    </div>
                    <div class="flex flex-col gap-4">
                        <label class="text-xs font-black uppercase text-gray-400 tracking-widest italic">
                            {{ form_label(form.diplomes) }}
                        </label>
                        
                        <div class="flex flex-wrap gap-3">
                            {% for identifier, child in form.diplomes %}
                                {% set diplome = form.diplomes.vars.choices[identifier].data %}
                                <label class="relative cursor-pointer group">
                                    {# On rend l'input réel mais caché #}
                                    {{ form_widget(child, {'attr': {'class': 'peer hidden'}}) }}
                                    
                                    {# Le design personnalisé qui réagit au 'peer' #}
                                    <div class="px-5 py-3 rounded-2xl border-2 transition-all duration-300 flex items-center gap-3
                                        border-gray-100 bg-gray-50 text-gray-400
                                        peer-checked:border-primary peer-checked:shadow-lg peer-checked:scale-[1.05] hover:scale-[1.05]
                                        {# Utilisation de l'objet diplôme récupéré en amont #}
                                        {{ diplome.isEquivalentBafa ? 'peer-checked:bg-primary peer-checked:text-white peer-checked:hover:bg-primary-400' : 'peer-checked:bg-golden peer-checked:border-golden peer-checked:text-primary peer-checked:hover:bg-golden-400' }}
                                        hover:border-gray-300 peer-checked:hover:border-primary hover:bg-white">
                                        
                                        <span class="text-xs font-black italic uppercase tracking-tighter">
                                            {{ child.vars.label }}
                                        </span>
                                        
                                        <div class="w-4 h-4 rounded-full border border-current flex items-center justify-center opacity-0 peer-checked:opacity-100 transition-opacity">
                                            <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7"/>
                                            </svg>
                                        </div>
                                    </div>
                                </label>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.diplomes) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
            <div class="md:col-span-4 bg-[#1A2B56] p-8 rounded-[2.5rem] text-white relative">
                <h3 class="font-black text-xs uppercase tracking-widest text-white/40 mb-8 italic">Compétences à activer</h3>
                <div class="grid grid-cols-4 gap-4">
                    {% for i in 1..8 %}
                    <label class="relative cursor-pointer group">
                        <input type="checkbox" class="peer hidden" name="skills[]" value="{{ i }}" {{ i < 5 ? 'checked' : '' }}>
                        <div class="w-14 h-14 rounded-2xl bg-white/10 flex items-center justify-center transition-all peer-checked:bg-golden peer-checked:scale-110 group-hover:bg-white/20">
                            {{ ux_icon('lucide:check', {class: 'w-6 h-6 text-white peer-checked:text-primary'}) }}
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <div class="md:col-span-8 bg-golden p-10 rounded-[2.5rem] flex flex-col justify-center items-center text-center">
                <h3 class="text-3xl font-black text-primary italic mb-2">Prêt à mettre à jour ?</h3>
                <p class="text-primary/60 font-bold uppercase text-xs tracking-[0.2em] mb-8">Vérifiez bien vos informations avant de valider.</p>
                <div class="flex gap-4 w-full max-w-md">
                    <a href="{{ path('app_my_profile') }}" class="flex-1 py-4 bg-white/20 rounded-2xl font-black text-primary uppercase tracking-tighter hover:bg-white/30 transition-all text-center my-auto">Annuler</a>
                    <button type="submit" class="flex-[2] py-4 bg-primary text-golden rounded-2xl font-black text-xl italic uppercase tracking-tighter hover:scale-105 transition-all shadow-xl cursor-pointer">
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}