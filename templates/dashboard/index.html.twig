{% extends 'navbase.html.twig' %}

{% block title %}Odysseo - Tableau de Bord{% endblock %}

{% block content %}       
<header class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
    <div>
        <h1 class="text-3xl font-black tracking-tighter text-primary italic">Séjour<span class="text-golden">.</span></h1>
        <p class="text-xs text-gray-400 font-bold uppercase tracking-widest mt-1">Pilotage en temps réel</p>
    </div>

    <div class="flex items-center gap-3 bg-white p-1.5 rounded-2xl shadow-sm border border-gray-100">
        <button class="p-2.5 text-gray-400 hover:text-primary hover:bg-gray-50 rounded-xl transition-all cursor-pointer" title="Filtrer">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/></svg>
        </button>

        <div class="w-px h-6 bg-gray-100 mx-1"></div>

        <button class="flex items-center gap-2 px-4 py-2.5 text-sm font-bold text-primary hover:bg-gray-50 rounded-xl transition-all cursor-pointer">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/><path stroke-width="2" d="M9 9h1.5m1.5 0H13m-4 4h4m-4 4h4"/></svg>
            <span>Export PDF</span>
        </button>

        <button class="flex items-center gap-2 px-4 py-2.5 bg-primary text-white rounded-xl text-sm font-bold shadow-lg shadow-primary/20 hover:bg-primary-400 transition-all cursor-pointer">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="3" d="M12 4v16m8-8H4"/></svg>
            <span>Nouveau</span>
        </button>
    </div>
</header>

<div class="grid grid-cols-1 md:grid-cols-10 gap-6 mb-8">
    <div class="md:col-span-2 bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex justify-between items-center">
        <div>
            <div class="text-4xl font-bold">66</div>
            <div class="text-xs text-gray-400 mt-1 uppercase tracking-wider">enfants</div>
        </div>
        <div class="p-3 bg-[#E8EEFF] text-[#1A2B56] rounded-xl">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3.005 3.005 0 013.75-2.906z"/></svg>
        </div>
    </div>
    <div class="md:col-span-2 bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex justify-between items-center">
        <div>
            <div class="text-4xl font-bold">7</div>
            <div class="text-xs text-gray-400 mt-1 uppercase tracking-wider">animateurs</div>
        </div>
        <div class="p-3 bg-[#E8EEFF] text-[#1A2B56] rounded-xl">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/></svg>
        </div>
    </div>
    <div class="md:col-span-2 bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex justify-between items-center">
        <div>
            <div class="text-4xl font-bold">14</div>
            <div class="text-xs text-gray-400 mt-1 uppercase tracking-wider">jours restants</div>
        </div>
        <div class="p-3 bg-[#FFF9E6] text-[#FFD700] rounded-xl">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/></svg>
        </div>
    </div>
    <div class="md:col-span-4 md:row-span-2 bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
        <h3 class="text-xl font-bold mb-8">Equipe d'animation</h3>
        
        <section class="mb-10">
            <h4 class="text-sm font-bold text-gray-900 mb-6">Présents</h4>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
                {% for i in 1..8 %}
                <div class="flex flex-col items-center">
                    <div class="w-20 h-20 bg-gray-200 rounded-sm mb-2"></div>
                    <span class="text-sm font-bold">Enzo P.</span>
                </div>
                {% endfor %}
            </div>
        </section>

        <section>
            <h4 class="text-sm font-bold text-gray-900 mb-6">En congé</h4>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
                {% for i in 1..2 %}
                <div class="flex flex-col items-center opacity-60">
                    <div class="w-20 h-20 bg-gray-200 rounded-sm mb-2"></div>
                    <span class="text-sm font-bold">Enzo P.</span>
                </div>
                {% endfor %}
            </div>
        </section>
    </div>

    <div class="md:col-span-3 bg-white rounded-3xl p-8 shadow-sm border border-gray-100 h-full min-h-[600px]">
        <h3 class="text-xl font-bold mb-6">Calendrier de la journée</h3>
    </div>

    <div class="md:col-span-3 flex flex-col gap-6 h-full">
        <div class="bg-[#ffff] rounded-3xl p-8 shadow-sm border border-gray-100">
            <h3 class="text-lg font-bold mb-1">To-do</h3>
            <div class="space-y-3">
                {% for i in 1..4 %}
                <div class="bg-[#F8F9FA] p-4 rounded-xl border-2 border-white border-l-6 shadow-md border-l-[#1A2B56]">
                    <p class="text-xs font-bold">Todo {{i}}</p>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-100">
            <h3 class="text-lg font-bold mb-1">Alertes</h3>
            <div class="space-y-3 mt-6">
                {% for i in 1..3 %}
                <div class="bg-[#FFF5F5] p-4 rounded-xl border-2 border-white border-l-6 shadow-md border-l-[#FF4D4D]">
                    <p class="text-xs font-bold text-[#FF4D4D]">Taux d'encadrement non conforme</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}